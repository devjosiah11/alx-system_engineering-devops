#!/bin/bash

echo "Active Internet connections (only servers)"
echo "Proto Recv-Q Send-Q Local Address           Foreign Address         State       PID/Program name"

# Display TCP listening sockets
netstat -tln | awk '$1 == "tcp" {print $1, $4, $7}' | while read proto local foreign pid; do
    program=$(ps -p $pid -o comm=)
    echo "$proto        -      -      $local       -      LISTEN      $pid/$program"
done

# Display UDP listening sockets
netstat -uln | awk '$1 == "udp" {print $1, $4, $6}' | while read proto local pid; do
    program=$(ps -p $pid -o comm=)
    echo "$proto        -      -      $local       -                 $pid/$program"
done

echo "Active UNIX domain sockets (only servers)"
echo "Proto RefCnt Flags       Type       State         I-Node   PID/Program name    Path"

# Display UNIX domain sockets
netstat -xln | awk '$1 == "unix" {print $1, $2, $3, $4, $5, $6}' | while read proto refcnt flags type state inode pid path; do
    program=$(ps -p $pid -o comm=)
    echo "$proto $refcnt $flags     $type       $state         $inode   $pid/$program    $path"
done

